{
  "global": {
    "env": {
      "MODEL": "qwen3:8b"
    }
  },
  "ops": [
    {
      "id": "ollama",
      "type": "container/run",
      "args": {
        "gpu": true,
        "image": "docker.io/ollama/ollama:0.12.0",
        "entrypoint": ["/bin/sh", "-c"],
        "cmd": [
          "ollama serve & sleep 5 && ollama pull $MODEL && tail -f /dev/null"
        ],
        "resources": [
          {
            "url": "https://models.nosana.io/ollama/qwen3/8b",
            "type": "S3",
            "target": "/root/.ollama/models",
            "allowWrite": true
          }
        ]
      },
      "execution": {
        "group": "run"
      }
    },
    {
      "id": "agents",
      "type": "container/run",
      "args": {
        "image": "rihsabmohd/my-app:v2",
        "expose": 3000,
        "env": {
          "NOS_OLLAMA_API_URL": "http://%%ops.ollama.host%%:11434/api",
          "NOS_MODEL_NAME_AT_ENDPOINT": "qwen3:8b"
        }
      },
      "execution": {
        "group": "run",
        "depends_on": ["ollama"]
      }
    }
  ],
  "meta": {
    "trigger": "dashboard",
    "system_requirements": {
      "required_vram": 24
    }
  },
  "type": "container",
  "version": "0.1"
